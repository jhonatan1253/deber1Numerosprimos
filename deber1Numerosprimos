/*
 * DEBER2
 * JHONATAN JACOME
 *  Realizar un programa que al presionar el pulsador cada vez, se visualiza a cada n√∫mero primo hasta el 99.
 */
const int A=8;   //decodificador
const int B=9;  //decodificador
const int C=10; //decodificador
const int D=11;  //decodificador
const int btn=7;  //
const int unidades=12;
const int decenas=13;

int cont;
int uni;
int dec;
int pulsador;
int i=0;
bool primo;


void setup() {
pinMode (A,OUTPUT);
pinMode (B,OUTPUT);
pinMode (C,OUTPUT);
pinMode (D,OUTPUT);
pinMode (btn,INPUT);
pinMode(unidades,OUTPUT);
pinMode(decenas,OUTPUT);
}

void loop() {
 if (digitalRead(btn)==LOW){
    pulsador=1;
  }

  if(digitalRead(btn)==HIGH && pulsador == 1)
  delay(300);
{
   for(cont=2; cont<99;cont++){
         primo = true;
        for(i=2;i<cont;i++){
          if(cont%i==0)
            {  
          primo=false;
            }
        }
          if(primo){
            pulsador=0;
            dec=cont/10;
            uni= cont-(dec*10); 
              }
              
            digitalWrite (decenas,HIGH);
            digitalWrite (unidades, LOW);
            contador(dec); 
            delay (300);

            digitalWrite (decenas,LOW);
            digitalWrite (unidades, HIGH);
            contador(uni);
            delay(300); 
    }
  }
}

void contador (int i){
switch(i){
    case 0:
      digitalWrite(A,LOW);
      digitalWrite(B,LOW);
      digitalWrite(C,LOW);
      digitalWrite(D,LOW);
       break;
       case 1:
      digitalWrite(A,HIGH);
      digitalWrite(B,LOW);
      digitalWrite(C,LOW);
      digitalWrite(D,LOW);
       break;
       case 2:
      digitalWrite(A,LOW);
      digitalWrite(B,HIGH);
      digitalWrite(C,LOW);
      digitalWrite(D,LOW);
       break;
       case 3:
      digitalWrite(A,HIGH);
      digitalWrite(B,HIGH);
      digitalWrite(C,LOW);
      digitalWrite(D,LOW);
       break;
       case 4:
      digitalWrite(A,LOW);
      digitalWrite(B,LOW);
      digitalWrite(C,HIGH);
      digitalWrite(D,LOW);
       break;
       case 5:
      digitalWrite(A,HIGH);
      digitalWrite(B,LOW);
      digitalWrite(C,HIGH);
      digitalWrite(D,LOW);
       break;
       case 6:
      digitalWrite(A,LOW);
      digitalWrite(B,HIGH);
      digitalWrite(C,HIGH);
      digitalWrite(D,LOW);
       break;
       case 7:
      digitalWrite(A,HIGH);
      digitalWrite(B,HIGH);
      digitalWrite(C,HIGH);
      digitalWrite(D,LOW);
       break;
       case 8:
      digitalWrite(A,LOW);
      digitalWrite(B,LOW);
      digitalWrite(C,LOW);
      digitalWrite(D,HIGH);
       break;
       case 9:
      digitalWrite(A,HIGH);
      digitalWrite(B,LOW);
      digitalWrite(C,LOW);
      digitalWrite(D,HIGH);
       break;
}

}
